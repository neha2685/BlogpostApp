<!DOCTYPE html>
<html>
<head>
  <title>Mainapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag :defaults %>
</head>

<body class="top">
<div>
  <div id="topBar">
    <div id="mainNav">
      <ul>
        <li class="lft"><%= link_to "Home", main_app.root_path %></li>
        <% if user_signed_in? %>
            <li class="lft">
            <%= link_to "Post", blogpost.root_path %>
            </li>
            <li class="rgt">
              <%= link_to "Sign out", main_app.destroy_user_session_path, :method => :delete %>
            </li>
        <% else %>
            <li class="rgt"><%= link_to "Register", main_app.new_user_registration_path %></li>
            <li class="rgt"><%= link_to "Login", main_app.new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div id="content">
        <%=  yield %>
  </div>
</div>
</body>
</html>
